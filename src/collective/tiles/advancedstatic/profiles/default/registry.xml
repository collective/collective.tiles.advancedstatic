<?xml version="1.0"?>
<registry>
  <record name="plone.app.tiles">
    <value purge="false">
      <element>collective.tiles.advancedstatic</element>
    </value>
  </record>
  <records prefix="plone.app.mosaic.app_tiles.collective_tiles_advancedstatic"
           interface="plone.app.mosaic.interfaces.ITile">
    <value key="name">collective.tiles.advancedstatic</value>
    <value key="label">Advanced Static</value>
    <value key="category">advanced</value>
    <value key="tile_type">app</value>
    <value key="default_value"></value>
    <value key="read_only">false</value>
    <value key="settings">true</value>
    <value key="favorite">false</value>
    <value key="rich_text">false</value>
    <value key="weight">20</value>
  </records>
  <record name="collective.tiles.advancedstatic.css_styles">
    <field type="plone.registry.field.Tuple">
        <title>Advanced static tiles: available CSS styles</title>
        <description>A list of style available for Advanced static tile</description>
        <value_type type="plone.registry.field.TextLine" />
    </field>
    <value>
        <element>example-element|Example element</element>
    </value>
  </record>
</registry>

